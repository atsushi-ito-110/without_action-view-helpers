<h1>Books#index</h1>

<div>
  <p>
    <%= link_to 'New', new_book_path %>
  </p>
  <table>
    <thead>
      <tr>
        <th>id</th>
        <th>title</th>
        <th>price</th>
        <th>description</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.id %></td>
          <td><%= book.title %></td>
          <td><%= book.price %></td>
          <td><%= book.description %></td>
          <td>
            <%= link_to 'Show', book_path(book.id) %>
            <%= link_to 'Edit', edit_book_path(book.id) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>